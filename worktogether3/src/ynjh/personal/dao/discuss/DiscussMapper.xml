<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ynjh.personal.dao.discuss.DiscussMapper">
	<!-- 写评论 -->
	<insert id="addUserCommentFirm" parameterType="Discuss">
		insert into discuss(discussUsersId,discussContent,discussLevel,discussTime,discusUsersType) values(#{discussUsersId},#{discussContent},#{discussLevel},#{discussTime},#{discusUsersType})
	</insert>
	<!-- 删评论 -->
	 <delete id="deleteUserCommentFirm" >
	delete from discuss where id=#{id} and discussUsersId=#{discussUsersId}
	</delete>
	<!-- 查看评论 -->
	<select id="selectUserCommentFirm" resultType="Discuss">
	select * from discuss where id=#{id} and discussUsersId=#{discussUsersId}
	</select>
</mapper>
