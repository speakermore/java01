<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ynjh.personal.dao.commentarticle.CommentArticleMapper">
	<!-- 写评论 -->
	<insert id="addUserCommentArticle" parameterType="CommentArticle">
		insert into commentarticle(articleId,usersId,commentArticleTime,commentArticleContent,commentArticleUsersType)
			value(#{articleId},#{usersId},#{commentArticleTime},#{commentArticleContent},#{commentArticleUsersType})
	</insert>
	<!-- 删评论 -->
	 <delete id="deleteUserCommentArticle" parameterType="Integer">
	delete from commentarticle where id=#{id}
	</delete>
	<!-- 查看评论(文章) -->
	<select id="selectUserCommentArticle" resultType="CommentArticle" parameterType="Integer">
	select * from commentarticle c,user u where articleId=#{articleId} and u.id=c.usersId
	</select>
</mapper>
