<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ynjh.personal.dao.follow.FollowMapper">
	<!-- 添加关注 -->
	<insert id="addUserFollow" parameterType="Follow">
		insert into follow
		(followId,byFollowId,followDate,followStartType,followType)
		value(#{followId},#{byFollowId},#{followDate},#{followStartType},#{followType})
	</insert>
	<!--取消关注 -->
	<delete id="deleteUserFollow">
		delete from follow where id=#{id}
	</delete>
	<!--查看关注 -->
	<select id="selectUserFollow" parameterType="Integer"
		resultType="Follow">
		select
		f.*,r.resumeJor,r.resumeWorks,r.resumeEducation,u.userRealName,u.userGender,u.userBirthday
		from follow f,resume r,user u where f.followId=#{followId} and
		u.id=r.userId and u.id=f.byFollowId
	</select>
	<!--查看关注的人数 -->
	<select id="selectUserFollowCount" parameterType="Integer"
		resultType="Integer">
		select count(*) from follow where followId=#{followId}
	</select>
	<!--查看被关注的人数 -->
	<select id="selectUserByFollowCount" parameterType="Integer"
		resultType="Integer">
		select count(*) from follow where byFollowId=#{byFollowId}
	</select>
</mapper>