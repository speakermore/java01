<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ynjh.company.dao.offer.CompanyOfferMapper">

	<insert id="addOffer" parameterType="Offer">
		insert into offer(userId,companyId,offerJob,offerContent,offerInvitationTime,offerSendTime)
		values(#{userId},#{companyId},#{offerJob},#{offerContent},#{offerInvitationTime},#{offerSendTime})
	</insert>
	
	<select id="findAll" parameterType="int" resultType="Offer">
		select * from offer where offerStatus!=4
		<!--语法： limit 开始记录号（从0开始）,每页记录条数 -->
		<if test="page!=null">
			limit #{page},5
		</if>
	</select>
	<select id="findById" parameterType="int" resultType="Offer">
		select * from offer where id=#{id}
	</select>
	
	<update id="updateOfferJob" >
		update offer set offerJob=#{offerJob} where id=#{id}
	</update>
	<update id="updateOfferContent" >
		update offer set offerContent=#{offerContent} where id=#{id}
	</update>
	<update id="updateOfferStatus" parameterType="int">
		update offer set offerStatus=#{offerStatus} where id=#{id}
	</update>
	
</mapper>